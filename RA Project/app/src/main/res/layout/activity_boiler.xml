<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E4E2E3">


  <LinearLayout
      android:id="@+id/headerView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#000000"
      android:orientation="horizontal"
      >
   <!-- <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:paddingLeft="20dp"
        android:background="#000000"
        android:src="@drawable/backicon"
        android:tint="#ffffff"/>-->
    <TextView
        android:id="@+id/tvRHead"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Boiler Room-Sign in"
        android:textColor="#ffffff"
        android:backgroundTint="@color/colorLog"
        android:textSize="20sp"/>
  </LinearLayout>

  <ScrollView
      android:id="@+id/scrollablContent"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_above="@+id/footerView"
      android:layout_below="@+id/headerView"
     >
    <LinearLayout
        android:id="@+id/content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/nav_font"
        android:layout_marginTop="10dp"
         >

      <TextView
          android:id="@+id/tvAddr1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="45712 W,125th Street"
          android:textSize="19dp"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
          android:paddingTop="10dp"
          android:lines="1"
          android:textColor="@color/colorFont"
          android:textAlignment="center"
          android:layout_gravity="center_horizontal"/>
      <TextView
          android:id="@+id/tvAddr2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="New York,NY 10027100"
          android:textSize="15sp"
          android:layout_marginTop="5dp"
          android:lines="1"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
          android:textColor="@color/colorAccent"
          android:textAlignment="center"
          android:layout_gravity="center_horizontal"/>
      <View
          android:id="@+id/view1"
          android:layout_width="fill_parent"
          android:layout_height="2dp"
          android:layout_alignParentRight="true"
          android:layout_below="@+id/textViewAddr2"
          android:layout_marginTop="10dp"
          android:background="@color/colorPrimaryDark" />
      <TextView
          android:id="@+id/textViewEquip"
          android:layout_width="match_parent"
          android:layout_height="35dp"
          android:text="Equipments"
          android:textSize="19dp"
          android:gravity="center"
          android:textColor="@color/colorFont"
          android:textAlignment="center"
          android:layout_gravity="center_horizontal"/>
      <View
          android:id="@+id/view2"
          android:layout_width="fill_parent"
          android:layout_height="2dp"
          android:layout_alignParentRight="true"
          android:layout_below="@+id/textViewEquip"
          android:layout_marginTop="3dp"
          android:background="@color/colorPrimaryDark" />
      <!-- <ListView
           android:id="@+id/textViewBoil"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:text=""
           android:layout_weight="1"
           android:layout_centerInParent="true"
           android:textAlignment="center"
           android:layout_gravity="center_horizontal"
           android:nestedScrollingEnabled="true"/> -->
      <ListView
          android:id="@+id/textViewBoil"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"

          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:id="@+id/nodataavialabletext"
          android:backgroundTint="@color/nav_font"
          android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="No data available"
            android:gravity="center"
            android:textSize="16dp"/>


      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/colorGy"></LinearLayout>

      <TextView
          android:visibility="gone"
          android:id="@+id/tvmechID"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Equipments"
          android:layout_gravity="center_horizontal"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:paddingBottom="100dp"
          android:background="#E4E2E3">
      <Button
          android:layout_width="300dp"
          android:layout_height="50dp"
          android:id="@+id/btnScan"
          android:layout_marginTop="40dp"
          android:text="Scan Equipment"
          android:layout_gravity="center_horizontal"
          android:textColor="@color/nav_font"
          android:textAllCaps="false"
          android:textSize="20dp"
          android:lines="1"
          android:background="@drawable/scan"
          android:backgroundTint="#00C0EF"/>

        <LinearLayout
          android:layout_width="300dp"
          android:layout_height="50dp"
          android:id="@+id/btnPerfInsp"
          android:layout_marginTop="20dp"
          android:text="@string/performInspect"
          android:layout_gravity="center_horizontal"
          android:background="@drawable/scan"
          android:backgroundTint="#929292"
          android:orientation="vertical">

        <TextView
            android:id="@+id/tvBtnInsp"
            android:layout_width="match_parent"

            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/nav_font"
            android:textAllCaps="false"
            android:lines="1"
            android:textAlignment="center"
            android:textSize="20dp"
            android:text="Perform Inspection"/>
        <TextView
            android:id="@+id/tvTxForm"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/nav_font"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:lines="1"
            android:layout_marginBottom="10dp"


            android:textSize="13dp"
            android:text="Default Inspection Form"/>
      </LinearLayout>

      <Button
          android:layout_width="300dp"
          android:layout_height="50dp"
          android:id="@+id/btnSignoutM"
          android:layout_marginTop="20dp"
          android:text="Sign out"
          android:layout_gravity="center_horizontal"
          android:textColor="@color/nav_font"
          android:textSize="20dp"
          android:background="@drawable/scan"
          android:backgroundTint="#C90101"/>
      </LinearLayout>
    </LinearLayout>
  </ScrollView>

  <LinearLayout
      android:id="@+id/footerView"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_alignParentBottom="true"
      android:orientation="vertical"
      android:background="#aeaeae"
      android:weightSum="1"

      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorGy"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


    <ImageView
        android:id="@+id/docLibr"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"



        android:src="@drawable/note"

        android:layout_weight="0.50"/>
    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="#FFFFFF" />
    <ImageView
        android:id="@+id/vendRepr"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"

        android:src="@drawable/buildprofile"
        android:layout_weight="0.50"/>
    </LinearLayout>

  </LinearLayout>

</RelativeLayout>