<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">
    <!-- <android.support.design.widget.AppBarLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
              <include
                  layout="@layout/activity_repairsmain"/>
      </android.support.design.widget.AppBarLayout>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnback"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:src="@drawable/backicon"
                android:tint="#ffffff"


                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Vendor Repairs"
                android:textColor="#ffffff"
                android:textSize="20sp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/textViewAdr1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="Boiler Room"
            android:textAlignment="center"
            android:textColor="@color/colorLog"
            android:textSize="19dp"/>

        <View
            android:id="@+id/view1"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textViewAddr2"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimaryDark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <SearchView
                android:id="@+id/svEquip"
                android:layout_width="match_parent"
                android:focusable="false"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:iconifiedByDefault="false"
                android:background="@android:color/transparent"
                android:queryBackground="@android:color/transparent"
                android:queryHint="Search equipment or repair status"/>

        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dp"
            android:background="@color/verylighgray"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/testLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        >
        <Button
            android:layout_width="match_parent"

            android:layout_height="50dp"
            android:id="@+id/btnCancel"
            android:text="Cancel"
            android:layout_weight="0.5"
            android:textColor="#FFFFFF"
            android:background="#aeaeae"
            />

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/nav_font"/>
        <Button
            android:layout_width="match_parent"

            android:layout_height="50dp"
            android:id="@+id/btnClick"
            android:textColor="#FFFFFF"
            android:text="Save"
            android:layout_weight="0.5"
            android:background="#aeaeae"
          />
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:layout_weight="0.85"
    android:orientation="vertical"
    android:background="@color/nav_font"

    >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

       />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No data available"
        android:textSize="17dp"
        android:gravity="center"/>


</LinearLayout>


</LinearLayout>
    <LinearLayout
        android:id="@+id/footerView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="#aeaeae"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorGy"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


        <ImageView
            android:id="@+id/docLibr"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
             android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/note"
            android:layout_weight="0.49"/>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#FFFFFF" />
        <ImageView
            android:id="@+id/vendRepr"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/buildprofile"

            android:background="@color/colorReg"
            android:layout_weight="0.50"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
