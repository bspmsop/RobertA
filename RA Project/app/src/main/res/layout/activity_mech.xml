<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E2E3">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/framer">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnback"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:paddingLeft="5dp"
                    android:src="@drawable/backicon"
                    android:tint="#ffffff"/>
                <TextView
                    android:id="@+id/tvMechH"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="Mechanical Room"
                    android:layout_marginRight="45dp"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:maxLines="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"

                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:paddingTop="10dp"
                    android:lines="1"
                    android:text="SELECT MECHANICAL ROOM"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15dp"
                    />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="0dp"
                    android:id="@+id/rlayout">
                    <Button
                        android:id="@+id/popbtn"


                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:padding="0dp"

                        android:textSize="17dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"

                        android:layout_marginTop="15dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="0dp"

                        android:background="@android:color/transparent"


                        android:text="Select Mechanical Room"
                        android:textColor="@color/colorBlack"
                        android:textAllCaps="false"
                        android:textAlignment="center" />

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="18dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/darkgraydown"

                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:visibility="gone" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/verylighgray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"

                    android:background="@color/colorGy"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnMechsign"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:background="@drawable/button"
                android:text="Sign In"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:backgroundTint="#22C900"/>
            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:paddingTop="10dp"
                android:id="@+id/tvTitle"
                android:textSize="15dp"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>